<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listbutton_height"
    android:orientation="vertical"
    android:background="#ffffff">

   <android.support.v7.widget.CardView
       android:clickable="false"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardCornerRadius="5dp"
       app:cardElevation="5dp"
       android:layout_margin="8dp">

       <RelativeLayout
           android:clickable="false"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/listbutton_imageview"
               android:clickable="false"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"/>

           <TextView
               android:id="@+id/listbutton_textview"
               android:clickable="false"
               android:layout_width="match_parent"
               android:layout_height="@dimen/listbutton_text_height"
               android:layout_alignParentBottom="true"
               android:textColor="@color/white"
               android:textSize="20dp"
               android:gravity="center_vertical"
               android:paddingLeft="10dp"
               android:background="@color/list_button_color"/>

       </RelativeLayout>
   </android.support.v7.widget.CardView>

</LinearLayout>
